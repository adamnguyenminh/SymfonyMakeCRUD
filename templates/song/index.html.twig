{% extends 'base.html.twig' %}

{% block title %}Song index{% endblock %}

{% block body %}
    <h1>Song index</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>SongName</th>
                <th>Single</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for song in songs %}
            <tr>
                <td>{{ song.id }}</td>
                <td>{{ song.SongName }}</td>
                <td>{{ song.Single }}</td>
                <td>{{ song.slug }}</td>
                <td>
                    <a href="{{ path('song_show', {'id': song.id}) }}" class="btn btn-warning">show</a>
                    <a href="{{ path('song_edit', {'id': song.id}) }}" class="btn btn-success">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('song_new') }}" class="btn btn-danger">Create new</a>
{% endblock %}
