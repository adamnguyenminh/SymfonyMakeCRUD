{% extends 'base.html.twig' %}

{% block title %}Song{% endblock %}

{% block body %}
    <h1>Song</h1>

    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ song.id }}</td>
            </tr>
            <tr>
                <th>SongName</th>
                <td>{{ song.SongName }}</td>
            </tr>
            <tr>
                <th>Single</th>
                <td>{{ song.Single }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ song.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('song_index') }}" class="btn btn-info">back to list</a>

    <a href="{{ path('song_edit', {'id': song.id}) }}" class="btn btn-success">edit</a>

    {{ include('song/_delete_form.html.twig') }}
{% endblock %}
